<body>

<h1>Bingo Realista</h1>

<div class="cartela" id="cartela"></div>

<button onclick="novoJogo()">Novo Jogo</button>

<div id="numerosSorteados"></div>

<script>
let numerosChamados = [];
let cartelaNumeros = [];
let sorteioInterval;

// Cores por faixa de número (B-I-N-G-O)
const cores = [
  "#e53935", // B 1-15
  "#3949ab", // I 16-30
  "#00897b", // N 31-45
  "#fdd835", // G 46-60
  "#8e24aa"  // O 61-75
];

function corPorNumero(num) {
  if(num >=1 && num <= 15) return cores[0];
  if(num >=16 && num <= 30) return cores[1];
  if(num >=31 && num <= 45) return cores[2];
  if(num >=46 && num <= 60) return cores[3];
  if(num >=61 && num <= 75) return cores[4];
  return "#000";
}

// Gera números únicos dentro de uma faixa
function numerosUnicos(min, max, quantidade) {
  const nums = new Set();
  while(nums.size < quantidade) {
    nums.add(Math.floor(Math.random() * (max - min + 1)) + min);
  }
  return Array.from(nums);
}

function gerarCartela() {
  cartelaNumeros = [];
  const cartelaDiv = document.getElementById('cartela');
  cartelaDiv.innerHTML = '';

  // Colunas B-I-N-G-O
  const colunas = [
    numerosUnicos(1, 15, 5),
    numerosUnicos(16, 30, 5),
    numerosUnicos(31, 45, 5),
    numerosUnicos(46, 60, 5),
    numerosUnicos(61, 75, 5)
  ];

  // Monta a cartela linha por linha
  for(let linha = 0; linha < 5; linha++) {
    for(let col = 0; col < 5; col++) {
      const casa = document.createElement('div');
      casa.className = 'casa';
      if(linha === 2 && col === 2) {
        casa.textContent = "FREE";
        casa.classList.add('marcada');
        casa.style.backgroundColor = "#ff9800";
      } else {
        casa.textContent = colunas[col][linha];
        cartelaNumeros.push(colunas[col][linha]);
      }
      casa.onclick = () => {
        if(casa.textContent !== "FREE") {
          casa.classList.toggle('marcada');
        }
      };
      cartelaDiv.appendChild(casa);
    }
  }
}

function sortearNumero() {
  if(numerosChamados.length >= 75) {
    clearInterval(sorteioInterval);
    alert("Todos os números foram sorteados!");
    return;
  }

  let numero;
  do {
    numero = Math.floor(Math.random() * 75) + 1;
  } while(numerosChamados.includes(numero));

  numerosChamados.push(numero);

  // Cria a bola colorida
  const bola = document.createElement('div');
  bola.className = 'bola nova';
  bola.textContent = numero;
  bola.style.backgroundColor = corPorNumero(numero);

  const container = document.getElementById('numerosSorteados');
  container.appendChild(bola);

  // Mantém somente os últimos 6 números
  const bolas = container.children;
  if(bolas.length > 6) {
    container.removeChild(bolas[0]);
  }
}

function novoJogo() {
  numerosChamados = [];
  document.getElementById('numerosSorteados').innerHTML = '';
  gerarCartela();
  clearInterval(sorteioInterval);
  sorteioInterval = setInterval(sortearNumero, 2000);
}

novoJogo();
</script>

</body>
</html>
